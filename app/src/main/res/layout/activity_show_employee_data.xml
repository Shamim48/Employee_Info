<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".ShowEmployeeData">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/showNameTvId"
            android:text="name"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

 <TextView
            android:id="@+id/showDesignationTvId"
            android:text="Designation"
     android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

 <TextView
            android:id="@+id/showSalaryTvId"
            android:text="Salary"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addressShowTvId"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:textColor="@color/black"
                android:text="Address"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/LocationBtnId"
                android:layout_width="0dp"
                android:text="Location"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phoneShowTvId"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:textColor="@color/black"
                android:text="phone"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/CallBtnId"
                android:layout_width="0dp"
                android:text="Call"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/emailShowTvId"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/emailBtnId"
                android:layout_width="0dp"
                android:text="Email"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:id="@+id/dobShowTvId"
            android:text="Dob"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ageShowTvId"
            android:text="age"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/genderShowTvId"
            android:text="Gender"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>